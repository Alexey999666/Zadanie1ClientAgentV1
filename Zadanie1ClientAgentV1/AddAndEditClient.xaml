<Window x:Class="Zadanie1ClientAgentV1.AddAndEditClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1ClientAgentV1"
        mc:Ignorable="d"
        Title="AddAndEditClient" Height="450" Width="800" x:Name="ClientAddEdit" Loaded="AddOrEditClient_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" >
            <Label Content="Имя"/>
            <TextBox x:Name="tbClientFirstName" TextWrapping="Wrap" Text="{Binding Path=FirstName}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" >
            <Label Content="Отчество"/>
            <TextBox   x:Name="tbClientMidleName" TextWrapping="Wrap" Text="{Binding Path=MiddleName}" />
        </StackPanel>
        <StackPanel Grid.Row="2" >
            <Label Content="Фамилия"/>
            <TextBox   x:Name="tbClientLastName" TextWrapping="Wrap" Text="{Binding Path=LastName}"/>
        </StackPanel>
        <StackPanel Grid.Row="3" >
            <Label Content="Телефон"/>
            <TextBox  x:Name="tbClientPhone" TextWrapping="Wrap" Text="{Binding Path=Phone}"/>
        </StackPanel>
        <StackPanel Grid.Row="4" >
            <Label Content="Почта"/>
            <TextBox  x:Name="tbClientEmail" TextWrapping="Wrap" Text="{Binding Path=Email}"/>
        </StackPanel>
        <StackPanel Grid.Row="5"  Orientation="Horizontal">
            <Button x:Name="btnAddEdit" Height="40" Width="100" Margin="10" Click="btnAddEdit_Clicked"/>
            <Button Content="Отмена" Height="40" Width="100" Margin="10" Click="btnCancel_Clicked" /> 
        </StackPanel>
    </Grid>
</Window>
