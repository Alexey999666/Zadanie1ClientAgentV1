<Window x:Class="Zadanie1ClientAgentV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie1ClientAgentV1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Loaded="DBLoaded_Loaded">
    <Grid>
        <TabControl >
            <TabItem  Header="Клиент">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Просмотр всех клиентов" Grid.Row="0"  />
                    <DataGrid Grid.Row="1" x:Name="DGClient" 
                              IsReadOnly="True" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            
                        
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding FirstName}"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding MiddleName}"/>
                            <DataGridTextColumn Header="Отчество" Binding="{Binding LastName}"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}"/>
                        <DataGridTextColumn Header="Почта" Binding="{Binding Email}"/>
                        </DataGrid.Columns>


                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                        <Button x:Name="btnAddClient" Click="btnAddClient_Clicked"
                                Content="Добавить" Height="40" Width="100" Margin="10" />
                        <Button x:Name="btnUpdateClient" Click="btnUpdateClient_Clicked"
                                Content="Редактировать" Height="40" Width="100" Margin="10"/>
                        <Button x:Name="btnDeleteClient" Click="btnDeleteClient_Clicked"
                                Content="Удалить" Height="40" Width="100" Margin="10" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3">
                        <StackPanel Margin="0,0,10,0"  HorizontalAlignment="Center" >
                            <Label Content="Поиск по Фамилии" HorizontalAlignment="Center"/>
                            <TextBox x:Name="tbClientFindLastName" TextChanged="tcClientFindLastName_Changed"
                                     Height="35" Width="120" TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Margin="0,0,10,0"  HorizontalAlignment="Center" >
                            <Label Content="Поиск по Телефону" HorizontalAlignment="Center"/>
                            <TextBox x:Name="tbClientFindPhone" TextWrapping="Wrap"
                                     TextChanged="tcClientFindPhone_Changed" Height="35" Width="120" />
                        </StackPanel>
                        <StackPanel Margin="0,0,10,0"  HorizontalAlignment="Center" >
                            <Label Content="Поиск по Почте" HorizontalAlignment="Center"/>
                            <TextBox x:Name="tbClientFindEmail" TextWrapping="Wrap"
                                     TextChanged="tcClientFindEmail_Changed" Height="35" Width="120" />
                        </StackPanel>
                        <!--<StackPanel Margin="10,0,0,0" HorizontalAlignment="Center"> 
                            <Label  Content="Фильтр" HorizontalAlignment="Center"/>
                            <TextBox x:Name="tbClientFilt" TextChanged="tcClientFilt_Changed" Height="35" Width="100" />
                        </StackPanel>-->
                        
                    </StackPanel>
                </Grid>

            </TabItem>
            <TabItem Header="Риелтор">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Просмотр всех риелторов" Grid.Row="0"  />
                    <DataGrid Grid.Row="1" x:Name="DGAgent" 
                              IsReadOnly="True" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            

                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding FirstName}"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding MiddleName}"/>
                            <DataGridTextColumn Header="Отчество" Binding="{Binding LastName}"/>
                            <DataGridTextColumn Header="Доля от комиссии" Binding="{Binding DealShare}"/>
                            
                        </DataGrid.Columns>

                    </DataGrid>
                    <StackPanel Orientation="Horizontal" Grid.Row="2">
                       
                            <Button x:Name="btnAddAgent" Click="btnAddAgent_Clicked"
            Content="Добавить" Height="40" Width="100" Margin="10" />
                            <Button x:Name="btnUpdateAgent" Click="btnUpdateAgent_Clicked"
            Content="Редактировать" Height="40" Width="100" Margin="10"/>
                            <Button x:Name="btnDeleteAgent" Click="btnDeleteAgent_Clicked"
            Content="Удалить" Height="40" Width="100" Margin="10" />
                        
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3">
                        <StackPanel Margin="0,0,10,0"  HorizontalAlignment="Center" >
                            <Label Content="Поиск по Фамилии" HorizontalAlignment="Center"/>
                            <TextBox x:Name="tbAgentFindLastName" TextChanged="tcAgentFindLastName_Changed"
             Height="35" Width="120" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
